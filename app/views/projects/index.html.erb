<h1>Project List</h1>
<br/>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Project Name</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="sortable">
    <% @projects.each do |project| %>
      <tr project="<%= project.id %>" >
        <td><%= link_to project.name, project %></td>
        <td><%= project.title %></td>
        <td><%= project.description %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Team Activity', team_activity_project_url(project.id) %></td>
        <td><%= link_to 'Time Sheet', project_project_time_sheets_path(project_id: project.id ) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="pagination_table">
    <%= will_paginate @projects, renderer: BootstrapPagination::Rails %>
</div>
<br>

<%= link_to 'New Project', new_project_path, :class => 'btn btn-primary' %>
