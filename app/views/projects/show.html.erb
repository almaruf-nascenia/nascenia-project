<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @project.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>
<div class="input-group">
  <form action="">
    <input type="text" name="assign_date" placeholder="Select date to show assign developers" class="form-control search_dev">
    <span class="input-group-btn">
      <button type="submit" class="btn btn-default">Search!</button>
    </span>
  </form>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th> Name </th>
      <th> Assign Date </th>
      <th> End Date </th>
      <th> Percentage </th>
    </tr>
  </thead>
  <tbody>
  <% @teams.each do |team| %>
    <tr>
      <td> <%= team.developer.name %> </td>
      <td> <%= team.start_date %> </td>
      <td> <%= team.end_date %> </td>
      <td> <%= team.participation_percentage %> </td>
    </tr>
  <%end%>
  </tbody>
</table>

<%#= link_to 'Edit', edit_project_path(@project) %>
<%#= link_to 'Back', projects_path %>
<script type="text/javascript">
 $(function() {
   $('.search_dev').datepicker({
     dateFormat: 'yy-mm-dd'
   })
 });
</script>