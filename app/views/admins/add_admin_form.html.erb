<div class="panel panel-info create-new-project">
  <div class="panel-heading">Add Admin</div>
  <div class="panel-body">

    <%= form_for(@admin, url: add_admin_admins_path) do |f| %>
        <% if @admin.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@admin.errors.count, 'error') %> prohibited this developer from being saved:</h2>
              <ul>
                <% @admin.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="row">
          <div class="col-md-12">
            <div id="addPercentageGroup" class="form-group">
              <%= f.label :email, :class => 'control-label focusOnShow' %>
              <%= f.text_field :email, :class => 'form-control' %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div id="addPercentageGroup" class="form-group">
              <%= f.hidden_field :admin, value: true %>
            </div>
          </div>
        </div>
        <%= f.submit nil, :class => 'btn btn-primary pull-right' %>

    <% end %>

  </div>
</div>