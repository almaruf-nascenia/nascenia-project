<p id="notice"><%= notice %></p>

<p>
  <strong>Developer Name:</strong>
  <%= @developer.name %>
</p>

<p>
  <strong>Designation:</strong>
  <%= @developer.designation %>
</p>

<p>
  <strong>Joining date:</strong>
  <%= @developer.joining_date %>
</p>

<p>
  <strong>Previous job exp (in years):</strong>
  <%= @developer.previous_job_exp %>
</p>

<!--<#%= link_to 'Edit', edit_developer_path(@developer) %> -->
<!--<#%= link_to 'Back', developers_path %>-->

<div class="input-group">
  <form action="">
    <input type="text" name="assign_date" placeholder="Select date " class="search_dev" value="<%= params[:assign_date].present? ? params[:assign_date] : '' %>">
    <span >
      <button type="submit" class="btn btn-default">Search!</button>
    </span>
  </form>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th> Project Name </th>
    <th> Action </th>
    <th> Status Date </th>
    <th> Participation Percentage </th>
  </tr>
  </thead>
  <tbody>
  <% @teams.each do |team| %>
      <%
         if team.status == 0
           status = 'Remove'
           design = 'label label-danger'
         elsif team.status == 1
           status = 'Assign'
           design = 'label label-success'
         else
           status = 'Re-assign'
           design = 'label label-primary'
         end
      %>
        <td><%= team.project.name %></td>
        <td><span class="<%= design %>"><%= status %></span></td>
        <td><%= team.participation_percentage.to_s + '%' %></td>
        <td><%= team.status_date %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<div>
  <%= link_to 'back', developers_path %>
</div>
<div class="pagination_table">
  <%= will_paginate @teams, renderer: BootstrapPagination::Rails %>
</div>

<script type="text/javascript">
  $(function() {
    $('.search_dev').datepicker({
      dateFormat: 'yy-mm-dd'
    })
  });
</script>