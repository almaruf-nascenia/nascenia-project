<h1>Developers List</h1>
<br/>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Developer Name</th>
      <th>Designation</th>
      <th>Joining date</th>
      <th>Previous job experience</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @developers.each do |developer| %>
      <tr>
        <td><%= link_to developer.name, developer %></td>
        <td><%= developer.designation %></td>
        <td><%= developer.joining_date %></td>
        <td><%= developer.previous_job_exp %></td>
        <td><%= link_to 'Edit', edit_developer_path(developer) %></td>
        <td><%= link_to 'Destroy', developer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="pagination_table">
  <%= will_paginate @projects, renderer: BootstrapPagination::Rails %>
</div>
<br>

<%= link_to 'New Developer', new_developer_path, :class => 'btn btn-primary' %>
